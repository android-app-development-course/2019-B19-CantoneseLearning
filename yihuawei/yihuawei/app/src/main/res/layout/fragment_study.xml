<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b2fcff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:foreground="@drawable/cansty"
        android:background="#ecfcff"
        android:foregroundGravity="left">

        <Button
            android:id="@+id/btn_sty"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/cansty"
            android:textSize="20sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#ecfcff"
        android:foreground="@drawable/fash"
        android:foregroundGravity="left">

        <Button
            android:id="@+id/btn_fashion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/canfashion"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@null"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#ecfcff"
        android:foreground="@drawable/gag"
        android:foregroundGravity="left">

        <Button
            android:id="@+id/btn_gag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/cangag"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@null"/>
    </FrameLayout>
    </LinearLayout>